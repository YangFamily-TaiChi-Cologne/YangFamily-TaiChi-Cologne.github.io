</div>

<!-- Kursplan -->
<section class="section">
  <div class="container">
    <h2 class="section__title">Aktueller Kursplan</h2>
    <div class="video-wrapper" style="padding-bottom:65%;">
      <iframe src="https://kalender.digital/ec33d1a8713c730ca489?iframe=true" title="Kursplan"></iframe>
    </div>
  </div>
</section>

<!-- Divider: scroll hint -->
<div class="section-divider">
  <span class="section-divider__arrow">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 5v14M5 12l7 7 7-7"/></svg>
