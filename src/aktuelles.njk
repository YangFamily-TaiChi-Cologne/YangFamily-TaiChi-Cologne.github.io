<!-- News Timeline -->
<section class="section section--alt">
  <div class="container">
    <h2 class="section__title">Neuigkeiten</h2>

    <div class="timeline">
      {%- for post in collections.news %}
      <div class="timeline__item">
        <span class="timeline__date">{{ post.data.displayDate | default(post.date | germanDate) }}</span>
        <h3 class="timeline__title">{{ post.data.title }}</h3>
        <div class="timeline__text">{{ post.templateContent | safe }}</div>
      </div>
      {%- endfor %}
    </div>
  </div>
</section>

<!-- YouTube -->
<section class="section">
  <div class="container text-center">
    <p class="section__text section__text--center">Weitere Möglichkeiten, Tai Chi zu üben, bietet der Youtube-Kanal der Yang Family Association:</p>
    <div style="margin-top:1.5rem;">
      <a href="https://www.youtube.com/user/yangfamilytaichi" class="btn btn--outline" target="_blank" rel="noopener">Youtube-Kanal der Yang Family</a>
    </div>
  </div>
</section>
