<!-- News Timeline -->
<section class="py-24 px-8 bg-light max-md:py-16 max-md:px-6">
  <div class="max-w-300 mx-auto">
    <h2 class="font-heading text-[clamp(1.8rem,4vw,2.8rem)] mb-6">Neuigkeiten</h2>

    <div class="timeline my-12">
      {%- for post in collections.news %}
      <div class="timeline__item">
        <span class="text-xs text-gold tracking-wider uppercase font-semibold">{{ post.data.displayDate | default(post.date | germanDate) }}</span>
        <h3 class="font-heading text-[1.15rem] my-2">{{ post.data.title }}</h3>
        <div class="text-[0.95rem] text-muted">{{ post.templateContent | safe }}</div>
      </div>
      {%- endfor %}
    </div>
  </div>
</section>

